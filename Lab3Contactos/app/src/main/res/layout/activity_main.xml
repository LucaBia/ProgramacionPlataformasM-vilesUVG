<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
            android:text="@string/mis_contactos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvMisContactos" android:textSize="40sp"
            android:textStyle="bold" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="37dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="61dp"
            android:layout_marginStart="61dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="62dp"
            android:layout_marginRight="62dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/_dynamic"/>
    <ListView
            android:layout_width="363dp"
            android:layout_height="252dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp" android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@+id/tvMisContactos" android:layout_marginBottom="52dp"
            app:layout_constraintBottom_toTopOf="@+id/btnAgregarContacto" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:id="@+id/lv"/>
    <Button
            android:text="@string/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAgregarContacto"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="60dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="148dp"
            android:layout_marginStart="148dp" android:layout_marginTop="49dp"
            app:layout_constraintTop_toBottomOf="@+id/_dynamic" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="148dp" android:layout_marginRight="148dp"/>
</android.support.constraint.ConstraintLayout>