<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main2Activity">

    <EditText
            android:layout_width="353dp"
            android:layout_height="49dp"
            android:inputType="textPersonName"
            android:text="Nombre"
            android:ems="10"
            android:id="@+id/etName" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="191dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintBottom_toTopOf="@+id/etPhone"/>
    <EditText
            android:layout_width="353dp"
            android:layout_height="48dp"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/etPhone"
            android:text="@string/telefono" app:layout_constraintTop_toBottomOf="@+id/etName"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintBottom_toTopOf="@+id/etEmail"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"/>
    <EditText
            android:layout_width="354dp"
            android:layout_height="48dp"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/etEmail"
            android:text="@string/correo_electronico" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/etPhone" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="14dp" android:layout_marginRight="14dp" android:layout_marginBottom="175dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="@string/regresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnRegresar" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="76dp"
            android:layout_marginStart="76dp" android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/etEmail" app:layout_constraintEnd_toStartOf="@+id/btnCrear"
            android:layout_marginEnd="52dp" android:layout_marginRight="52dp" android:layout_marginBottom="75dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="@string/crear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCrear" android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/etEmail" android:layout_marginLeft="52dp"
            android:layout_marginStart="52dp" app:layout_constraintStart_toEndOf="@+id/btnRegresar"
            android:layout_marginBottom="75dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="75dp"
            android:layout_marginRight="75dp" android:onClick="create"/>
</android.support.constraint.ConstraintLayout>