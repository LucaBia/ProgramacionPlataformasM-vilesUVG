<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main3Activity">

    <ListView
            android:layout_width="307dp"
            android:layout_height="274dp"
            android:id="@+id/LV_Pedido"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="39dp" android:layout_marginStart="39dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="148dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="38dp"
            android:layout_marginRight="38dp"/>
    <TextView
            android:text="Pedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:textStyle="bold"
            android:textSize="35sp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="34dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="147dp"
            android:layout_marginStart="147dp" android:layout_marginBottom="430dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="147dp" android:layout_marginRight="147dp"/>
    <Button
            android:text="Limpiar Pedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnLimpiar" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="39dp"
            android:layout_marginStart="39dp" android:layout_marginTop="26dp"
            app:layout_constraintTop_toBottomOf="@+id/LV_Pedido" app:layout_constraintEnd_toStartOf="@+id/btnHacerPedido"
            android:layout_marginEnd="55dp" android:layout_marginRight="55dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btnInicio"/>
    <Button
            android:text="Hacer Pedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnHacerPedido" android:layout_marginLeft="54dp" android:layout_marginStart="54dp"
            app:layout_constraintStart_toEndOf="@+id/btnLimpiar" android:layout_marginTop="26dp"
            app:layout_constraintTop_toBottomOf="@+id/LV_Pedido" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="39dp" android:layout_marginRight="39dp" android:layout_marginBottom="74dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="Inicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnInicio" android:layout_marginEnd="149dp" android:layout_marginRight="149dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="147dp" android:layout_marginStart="147dp" android:layout_marginBottom="18dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnLimpiar"/>
</android.support.constraint.ConstraintLayout>